<main>
    <form action="getUser" method="post" id="login">
        <h2>Log in</h2>
        <label for="username">email-address:</label><input type="text" id="email" name="email" required="required" autofocus="autofocus">
        <label for="password">Password:</label><input type="password" id="password" name="password" required="required">
        <input type="submit" value="log in">
        <a href="#" id="registerLink">no account? Register now!</a>
    </form>
    <form action="addUser" method="post" id="register" class="inactive">
        <h2>New account</h2>
        <label for="">email-address:</label><input type="text" name="email">
        <label for="">first name:</label><input type="text" name="firstname">
        <label for="">last name:</label><input type="text" name="lastname">
        <label for="">password:</label><input type="password" name="password">
        <label for="">repeat password:</label><input type="password" name="password2">
        <label for="">birthday</label><input type="date" name="birthday">
        <input type="submit" value="register" id="registerLink">
        <a href="#" id="loginLink">Already an account? Log in now!</a>
    </form>
</main>


